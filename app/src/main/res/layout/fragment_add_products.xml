<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.juanjo.repasomaneljuanjo.AddProducts"
    android:orientation="vertical">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AÑADIR PRODUCTO"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"/>

    <EditText
        android:id="@+id/etProdName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Nombre"
        android:ems="10"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"/>

    <EditText
        android:id="@+id/etProdPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Precio €"
        android:ems="10"
        android:layout_gravity="center_horizontal"
        android:inputType="numberDecimal"/>

    <EditText
        android:id="@+id/etProdDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Descripcion"
        android:ems="10"
        android:layout_gravity="center_horizontal"/>

    <Button
        android:id="@+id/btnSaveProd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Guardar Producto"
        android:layout_marginTop="20dp"/>

    <Button
        android:id="@+id/btnCleanFields"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Limpiar Campos"/>

</LinearLayout>